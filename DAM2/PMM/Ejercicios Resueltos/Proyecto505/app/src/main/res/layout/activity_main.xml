<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.juan11791.proyecto505.MainActivity">

    <fragment
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:name="com.example.juan11791.proyecto505.Fragment1"
        android:id="@+id/fragment"
        android:layout_centerHorizontal="true"
        tools:layout="@layout/fragment1"
        android:layout_alignParentTop="true" />

    <fragment
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:name="com.example.juan11791.proyecto505.Fragment2"
        android:id="@+id/fragment2"
        android:layout_alignParentBottom="true"
        tools:layout="@layout/fragment2"
        android:layout_alignEnd="@+id/fragment"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/fragment" />
</RelativeLayout>
